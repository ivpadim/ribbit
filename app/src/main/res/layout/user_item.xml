<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/userIcon"
        android:src="@drawable/avatar_empty"
        android:contentDescription="@string/content_desc_user_avatar"
        style="@style/GridImage" />

    <ImageView
        android:id="@+id/checkIcon"
        android:src="@drawable/avatar_selected"
        android:contentDescription="@string/content_desc_user_check"
        android:visibility="invisible"
        style="@style/GridImage" />

    <TextView android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:maxLines="2"
        android:padding="4dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userIcon"/>
    
</RelativeLayout>